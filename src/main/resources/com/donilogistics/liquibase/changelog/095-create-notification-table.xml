<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="095-create-notification-table" author="donilogistics">
        <createTable tableName="NOTIFICATION">
            <column name="ID" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE" type="varchar(50)"/>
            <column name="CHANNEL" type="varchar(20)"/>
            <column name="STATUS" type="varchar(20)"/>
            <column name="TITLE" type="varchar(255)"/>
            <column name="MESSAGE" type="varchar(4000)"/>
            <column name="RECIPIENT_USER_ID" type="uuid"/>
            <column name="ORGANIZATION_ID" type="uuid"/>
            <column name="SHIPMENT_ID" type="uuid"/>
            <column name="READ_" type="boolean"/>
            <column name="READ_AT" type="timestamp"/>
            <column name="CREATED_AT" type="timestamp"/>
            <column name="DELIVERED_AT" type="timestamp"/>
        </createTable>
        <createIndex indexName="IDX_NOTIFICATION_ON_RECIPIENT" tableName="NOTIFICATION">
            <column name="RECIPIENT_USER_ID"/>
        </createIndex>
        <createIndex indexName="IDX_NOTIFICATION_ON_CREATED_AT" tableName="NOTIFICATION">
            <column name="CREATED_AT"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="NOTIFICATION" baseColumnNames="RECIPIENT_USER_ID"
                                 referencedTableName="USER_" referencedColumnNames="ID"
                                 constraintName="FK_NOTIFICATION_RECIPIENT"/>
        <addForeignKeyConstraint baseTableName="NOTIFICATION" baseColumnNames="ORGANIZATION_ID"
                                 referencedTableName="ORGANIZATION" referencedColumnNames="ID"
                                 constraintName="FK_NOTIFICATION_ORG"/>
        <addForeignKeyConstraint baseTableName="NOTIFICATION" baseColumnNames="SHIPMENT_ID"
                                 referencedTableName="SHIPMENT" referencedColumnNames="ID"
                                 constraintName="FK_NOTIFICATION_SHIPMENT"/>
    </changeSet>

</databaseChangeLog>
